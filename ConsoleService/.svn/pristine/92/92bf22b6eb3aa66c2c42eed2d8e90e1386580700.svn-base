using System;
using System.Collections.Generic;
using System.Runtime.Serialization;

namespace MallHost.Service
{
    /// <summary>
    /// 用户表
    /// </summary>
    [DataContract]
    internal sealed class UserInfo
    {
        /// <summary>
        /// 记录ID
        /// </summary>
        [DataMember]
        public int Id { get; set; }

        /// <summary>
        /// 用户编号
        /// </summary>
        [DataMember]
        public string UserSn { get; set; }

        /// <summary>
        /// 用户名
        /// </summary>
        [DataMember]
        public string UserName { get; set; }

        /// <summary>
        /// 用户磁卡号
        /// </summary>
        [DataMember]
        public string UserSim { get; set; }

        /// <summary>
        /// 用户密码
        /// </summary>
        [DataMember]
        public string UserPass { get; set; }

        /// <summary>
        /// 用户注册时间
        /// </summary>
        [DataMember]
        public DateTime UserTime { get; set; }

        /// <summary>
        /// 用户角色
        /// </summary>
        [DataMember]
        public ClassLibrary.UserRole UserRole { get; set; }

        /// <summary>
        /// 用户类型
        /// </summary>
        [DataMember]
        public ClassLibrary.UserType UserType { get; set; }

        /// <summary>
        /// 备注
        /// </summary>
        [DataMember]
        public string Remark { get; set; }
    }
}
